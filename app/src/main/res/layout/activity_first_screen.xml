<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button android:id="@+id/search_decks_online_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Download Decks"
            android:onClick="downloadDecksClick"/>

        <Button android:id="@+id/new_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make New Deck"
            android:layout_weight="0.5"
            android:onClick="onNewListButtonClick"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/main_screen_deck_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView android:id="@+id/deck_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

</LinearLayout>